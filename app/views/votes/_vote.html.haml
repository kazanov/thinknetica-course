.votes
  .rating
    Rating: #{votable.rating}
  - if current_user && current_user.id != votable.user_id
    .buttons
      .btn-group
        = button_to '+', polymorphic_path(votable, action: :vote_up), id: "vote_up-question#{votable.id}",
                                                        disabled: votable.voted_by?(current_user),
                                                        method: :post, class: "btn btn-default",
                                                        remote: true, data: {type: :json}
      .btn-group
        = button_to '-', polymorphic_path(votable, action: :vote_down), id: "vote_down-question#{votable.id}",
                                                        disabled: votable.voted_by?(current_user),
                                                        method: :post, class: "btn btn-default",
                                                        remote: true, data: {type: :json}
      .btn-group
        = button_to 'x', polymorphic_path(votable, action: :remove_vote), id: "remove_vote-question#{votable.id}",
                                                        disabled: !votable.voted_by?(current_user),
                                                        method: :delete, class: "btn btn-default",
                                                        remote: true, data: {type: :json}

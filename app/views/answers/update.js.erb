<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').append('<%= j message %>')
  <% end %>
<% else %>
  $('div#answer<%= @answer.id %>').replaceWith('<%= j render @answer %>');
  $('div.panel-body .new-answer #answer_body').val('');
<% end %>

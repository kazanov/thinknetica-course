= simple_form_for [question, answer], remote: true, html: { id: "edit-answer-#{answer.id}" } do |f|
  .answer-errors
  = f.text_area :body, label: false, placeholder: 'Answer', input_html: { class: 'form-control', required: true }
  = f.simple_fields_for :attachments do |a|
    = a.file_field :file, label: 'File:'
  = f.button :submit, 'Save answer'

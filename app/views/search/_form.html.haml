= form_tag search_path, method: :get, class: 'navbar-form navbar-left' do
  = text_field_tag 'query', params[:query], type: 'search', placeholder: 'Search', class: 'form-control'
  = select_tag 'type', options_for_select(Search::TYPES, params[:tpe]), class: 'form-control'
  = submit_tag 'Search', class: 'form-control'

%h2 Add question
- if @question.errors.any?
  %h2 Some errors:
  %ul
  - @question.errors.full_messages.each do |error|
    %li= error
= simple_form_for @question do |f|
  = f.input :title
  = f.text_area :body
  %p Attachment:
  = f.simple_fields_for :attachments do |a|
    = a.file_field :file, label: 'File:'
  = f.button :submit, 'Save'
